@model LorcanaCardCollector.Models.Cards

@{
    ViewData["Title"] = "Edit";
}

<h1 class="freckle-font" style="color: #d5b88b">Edit Card</h1>
<hr />
<div class="bg-opacity-70 rounded shadow-sm" style="background: #d5b88b;">
    <div class="row">
        <div class="col-md-4 m-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-sm-2">
                    <label asp-for="CardId" class="control-label">ID from API</label>
                    <input asp-for="CardId" class="form-control" placeholder="From API...'ARI-001'" />
                    <span asp-validation-for="CardId" class="text-danger"></span>
                </div>

                <div class="form-group mb-sm-2">
                    <label asp-for="CardName" class="control-label"></label>
                    <input asp-for="CardName" class="form-control" />
                    <span asp-validation-for="CardName" class="text-danger"></span>
                </div>

                <div class="form-group mt-sm-2">
                    <label asp-for="Franchise" class="control-label"></label>
                    <input asp-for="Franchise" class="form-control" />
                    <span asp-validation-for="Franchise" class="text-danger"></span>
                </div>

                <div class="form-group mt-sm-2">
                    <label asp-for="Image_URL" class="control-label"></label>
                    <input asp-for="Image_URL" class="form-control" />
                    <span asp-validation-for="Image_URL" class="text-danger"></span>
                </div>

                <div class="form-group mb-sm-2">
                    <label asp-for="GemColor" class="control-label"></label>
                    <select asp-for="GemColor" id="GemColor" class="form-control" asp-items="Html.GetEnumSelectList<GemColor>()">
                        <option value="">Gem Color(s)</option>
                    </select>
                    <span asp-validation-for="GemColor" class="text-danger"></span>
                </div>

                <div class="form-group mb-sm-2">
                    <label asp-for="SetName" class="control-label"></label>
                    <input asp-for="SetName" class="form-control" />
                    <span asp-validation-for="SetName" class="text-danger"></span>
                </div>

                <div class="form-group mb-sm-2">
                    <label asp-for="Ink" class="control-label"></label>
                    <input asp-for="Ink" class="form-control" />
                    <span asp-validation-for="Ink" class="text-danger"></span>
                </div>

                <div class="form-group mt-sm-2">
                    <label asp-for="Willpower" class="control-label"></label>
                    <input asp-for="Willpower" class="form-control" />
                    <span asp-validation-for="Willpower" class="text-danger"></span>
                </div>

                <div class="form-group mt-sm-2">
                    <label asp-for="Strength" class="control-label"></label>
                    <input asp-for="Strength" class="form-control" />
                    <span asp-validation-for="Strength" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary mt-sm-3 me-sm-3" formnovalidate />
                    <a asp-action="Index" class="btn btn-secondary text-light mt-sm-3">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-4 text-center">
            <img src="@Model.Image_URL"
                 style="width:300px; height:auto; border-radius: 1rem;"
                 class="m-4" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
