@model LorcanaCardCollector.Models.Inventory

@{
    ViewData["Title"] = "Delete";
}

<div class="bg-opacity-70 rounded shadow-sm p-2" style="background: #d5b88b;">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="m-4">


        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.Card.Image_URL" alt="@Model.Card.CardName Card Image" class="img-fluid" style="max-height: 400px; object-fit: contain; border-radius: 1rem;" />
                <h4>@Model.Card.CardName</h4>
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-2">
                        Card ID
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Card.CardId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cost)
                    </dt>
                    <dd class="col-sm-10">
                        $@Html.DisplayFor(model => model.Cost)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        $@Html.DisplayFor(model => model.Price)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="InventoryId" />
        <input type="submit" value="Delete" class="btn btn-danger me-sm-3" />
        <a asp-action="Index" class="btn btn-secondary text-light">Cancel</a>
    </form>
</div>
