@model LorcanaCardCollector.Models.DeckCard

@{
    ViewData["Title"] = "Edit Deck Card";
}

<h2>Edit Deck Card</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Deck</label>
        <input type="text" class="form-control" value="@Model.Deck.DeckName" readonly />
        <input type="hidden" asp-for="DeckId" />
    </div>

    <div class="form-group">
        <label>Card</label>
        <input type="text" class="form-control" value="@Model.Card.CardName" readonly />
        <input type="hidden" asp-for="CardId" />
    </div>

    <div class="form-group">
        <label asp-for="QuantityInDeck"></label>
        <input asp-for="QuantityInDeck" class="form-control" />
        <span asp-validation-for="QuantityInDeck" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
