@model LorcanaCardCollector.Models.DeckCard

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Deck</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="DeckId" asp-items="@(new SelectList(ViewBag.Decks, "DeckId", "DeckName"))"></select>

            </div>
            <div class="form-group">
                <select asp-for="CardId" asp-items="@(new SelectList(ViewBag.Cards, "ID", "CardName"))"></select>

            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
