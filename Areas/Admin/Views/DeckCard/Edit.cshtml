@model LorcanaCardCollector.Models.DeckCard

@{
    ViewData["Title"] = "Edit";
}

<h1 class="freckle-font" style="color: #d5b88b">Edit Deck Card</h1>

<hr />
<div class="bg-opacity-70 rounded shadow-sm" style="background: #d5b88b;">
<div class="row">
    <div class="col-md-4 m-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CardId" />
            <input type="hidden" asp-for="DeckId" />
            <div class="form-group">
                <label asp-for="QuantityInDeck" class="control-label"></label>
                <input asp-for="QuantityInDeck" class="form-control" />
                <span asp-validation-for="QuantityInDeck" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary me-sm-3" />
                    <a asp-action="Index" class="btn btn-secondary text-light">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
