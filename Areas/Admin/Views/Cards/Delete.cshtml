@model LorcanaCardCollector.Models.Cards

@{
    ViewData["Title"] = "Delete";
}

<h1 class="freckle-font" style="color: #d5b88b">Delete Card</h1>

<div class="bg-opacity-70 rounded shadow-sm p-2" style="background: #d5b88b;">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="m-4">


        <div class="row">
            <div class="col-md-4 text-center">

                <img src="@Model.Image_URL" alt="@Model.CardName Card Image" class="img-fluid" style="max-height: 400px; object-fit: contain; border-radius: 1rem;" />
                <h4>@Model.CardName</h4>
            </div>

            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.CardName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CardName)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.GemColor)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.GemColor)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.SetName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.SetName)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Ink)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Ink)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Franchise)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Franchise)
                    </dd>
                </dl>
            </div>
        </div>
    </div>


    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="CardId" />
            <input type="submit" value="Delete" class="btn btn-danger me-sm-3" />
            <a asp-action="Index" class="btn btn-secondary text-light">Cancel</a>
        </form>
    </div>
</div>