@model LorcanaCardCollector.Models.Inventory

@{
    ViewData["Title"] = "Edit";
}

<h1 class="freckle-font" style="color: #d5b88b">Edit Card in Inventory</h1>

<hr />
<div class="bg-opacity-70 rounded shadow-sm" style="background: #d5b88b;">

    <div class="row">
        <div class="col-md-4 m-4">
            <h5>@Model.Card.CardName</h5>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InventoryId" />
                <input type="hidden" asp-for="CardId" />

                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Save" class="btn btn-primary me-sm-3" />
                    <a asp-action="Index" class="btn btn-secondary text-light">Back to Inventory</a>
                </div>
            </form>
        </div>
        <div class="col-md-4 text-center">
            <img src="@Model.Card.Image_URL"
                 style="width:300px; height:auto; border-radius: 1rem;"
                 class="m-4" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
